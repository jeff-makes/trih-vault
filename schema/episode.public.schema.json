{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://trih-browser/schema/episode.public.schema.json",
  "title": "PublicEpisode",
  "definitions": {
    "topicRef": {
      "type": "object",
      "properties": {
        "id": { "type": "string", "pattern": "^[a-z0-9-]+$" },
        "label": { "type": "string", "minLength": 1 },
        "slug": { "type": "string", "minLength": 1 },
        "isPending": { "type": "boolean" },
        "notes": { "type": ["string", "null"] }
      },
      "required": ["id", "label", "slug"],
      "additionalProperties": false
    }
  },
  "type": "object",
  "required": [
    "id",
    "episodeId",
    "title",
    "slug",
    "publishedAt",
    "description",
    "audioUrl",
    "rssLastSeenAt",
    "itunesEpisode",
    "cleanTitle",
    "cleanDescriptionMarkdown",
    "cleanDescriptionText",
    "descriptionBlocks",
    "fingerprint",
    "cleanupVersion",
    "part",
    "seriesId",
    "seriesKey",
    "seriesKeyRaw",
    "seriesGroupingConfidence",
    "keyPeople",
    "keyPlaces",
    "keyThemes",
    "keyTopics",
    "yearFrom",
    "yearTo",
    "yearConfidence"
  ],
  "properties": {
    "id": { "type": "string", "minLength": 1 },
    "episodeId": { "type": "string", "minLength": 1 },
    "title": { "type": "string" },
    "slug": { "type": "string", "minLength": 1 },
    "publishedAt": { "type": "string", "format": "date-time" },
    "description": { "type": "string" },
    "audioUrl": { "type": "string", "minLength": 1 },
    "rssLastSeenAt": { "type": "string", "format": "date-time" },
    "itunesEpisode": { "type": ["integer", "null"] },
    "cleanTitle": { "type": "string" },
    "cleanDescriptionMarkdown": { "type": "string" },
    "cleanDescriptionText": { "type": "string" },
    "descriptionBlocks": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 0
    },
    "credits": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": { "type": "string" }
      },
      "minProperties": 1
    },
    "fingerprint": { "type": "string", "minLength": 64, "maxLength": 64 },
    "cleanupVersion": { "type": "integer", "minimum": 1 },
    "derived": { "type": ["object", "null"], "additionalProperties": true },
    "part": { "type": ["integer", "null"], "minimum": 1 },
    "seriesId": { "type": ["string", "null"] },
    "seriesKey": { "type": ["string", "null"] },
    "seriesKeyRaw": { "type": ["string", "null"] },
    "seriesGroupingConfidence": {
      "type": "string",
      "enum": ["high", "medium", "low"]
    },
    "keyPeople": {
      "type": "array",
      "items": { "type": "string" },
      "uniqueItems": true,
      "maxItems": 12
    },
    "keyPlaces": {
      "type": "array",
      "items": { "type": "string" },
      "uniqueItems": true,
      "maxItems": 12
    },
    "keyThemes": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 0,
      "maxItems": 8,
      "uniqueItems": true
    },
    "keyTopics": {
      "type": "array",
      "items": { "$ref": "#/definitions/topicRef" },
      "minItems": 0,
      "maxItems": 3,
      "uniqueItems": true
    },
    "yearFrom": { "type": ["integer", "null"], "minimum": -9999, "maximum": 9999 },
    "yearTo": { "type": ["integer", "null"], "minimum": -9999, "maximum": 9999 },
    "yearConfidence": {
      "type": "string",
      "enum": ["high", "medium", "low", "unknown"]
    }
  },
  "additionalProperties": false
}
